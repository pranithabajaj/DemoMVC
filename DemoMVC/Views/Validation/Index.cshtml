    </tr>
    <tr>
        <td>Doj</td>
        <td>@Html.TextBoxFor(a => a.Doj)</td>
        <td>@Html.ValidationMessageFor(a => a.Doj, "", new { @class = "text-danger" })</td>
    </tr>
    <tr>
        <td><input type="submit" /></td>
    </tr>
