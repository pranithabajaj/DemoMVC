    </tr>
    <tr>
        <td>PanCard</td>
        <td>@Html.TextBoxFor(a => a.PanCard)</td>
        <td>@Html.ValidationMessageFor(a => a.PanCard, "", new { @class = "text-danger" })</td>
    </tr>
    <tr>
        <td>Password</td>
        <td>@Html.PasswordFor(a => a.Password)</td>
        <td>@Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })</td>
    </tr>
    <tr>
        <td>Confirm Password</td>
        <td>@Html.PasswordFor(a => a.ConfirmPassword)</td>
        <td>@Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "text-danger" })</td>
