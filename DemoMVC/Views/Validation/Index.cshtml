@model DemoMVC.Models.ValidationCls
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("GetBack","Validation"))
{
    @Html.AntiForgeryToken()
<table>
    <tr>
        <td>FirstName</td>
